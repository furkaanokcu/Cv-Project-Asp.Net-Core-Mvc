@model EntityLayer.Concrete.Feature
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description"> Sık Görüntülenen Kısım Güncelleme Paneli </p>

<form class="form-group" method="post">
    @Html.HiddenFor(x=>x.FeatureID)
    @Html.Label("Başlık")
    @Html.TextBoxFor(x=>x.Header,new { @class="form-control"})
    <br />
    @Html.Label("Ad Soyad")
    @Html.TextBoxFor(x=>x.Name,new { @class="form-control"})
    <br />
    @Html.Label("Görev")
    @Html.TextBoxFor(x=>x.Title,new { @class="form-control"})
    <br />
    <button class="btn btn-primary">Güncelle</button>

</form>
@Html.ActionLink("İptal","Index","Default",null,new{@class="btn btn-danger"})
        </div>
    </div>
</div>



