@using EntityLayer.Concrete
@model List<Experience>

  <div class="section px-3 px-lg-4 pt-5" id="experience">
                <div class="container-narrow">
                    <div class="text-center mb-5">
                        <h2 class="marker marker-center">Deneyimlerim</h2>
                    </div>
                    <div class="row">
                @{ 
                    int modelCount = Model.Count;
                    int first = 0;
                    int last = 0; 

                    if (modelCount % 2 == 0) { first = modelCount / 2; last = first; }
                   

                    else { first = (modelCount + 1) / 2; last = first - 1; } 
                    

                    var delay = 100;


                <div class="col-md-5 ">
                            @foreach(var item in Model.Take(first))
                            {
                            <div class="card mb-3" data-aos="fade-right" data-aos-delay="100">
                                <div class="card-header px-3 py-2">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h3 class="h5 mb-1">@item.Name</h3>
                                            <div class="text-muted text-small">@item.Date</div>
                                        </div><img src="@item.ImageUrl" width="48" height="48" alt="ui-ux" />
                                    </div>
                                </div>
                                <div class="card-body px-3 py-2">
                                  <p>@item.Description</p>
                                </div>
                        </div>
                        delay += 100;
                    }
                    </div>

                    <div class="col-md-5 offset-md-2">
                             @foreach(var item in Model.TakeLast(last))
                            {
                            <div class="card mb-3" data-aos="fade-right" data-aos-delay="100">
                                <div class="card-header px-3 py-2">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h3 class="h5 mb-1">@item.Name</h3>
                                            <div class="text-muted text-small">@item.Date</div>
                                        </div><img src="@item.ImageUrl" width="48" height="48" alt="ui-ux" />
                                    </div>
                                </div>
                                <div class="card-body px-3 py-2">
                                    <p>@item.Description</p>
                                </div>
                            </div>                     
                            delay += 100;
                        }
                        </div>                     
                    }
                </div>
            </div>
            </div>
            