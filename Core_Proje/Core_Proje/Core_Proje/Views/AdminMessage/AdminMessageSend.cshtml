@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "AdminMessageSend";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}



@using (Html.BeginForm("AddService", "Service", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Yeni Mesaj Paneli </p>
                <form class="forms-sample" method="post">
                    <br />
                    @Html.Label("Konu")
                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                    <br />
                    <label>Alıcı</label>
                    @Html.TextBoxFor(x => x.Receiver, new { @class = "form-control" })
                    <br />
                    <label>Mesaj</label>
                    @Html.TextAreaFor(x => x.MessageContent,8,3, new { @class = "form-control" })
                    <br />
                    <button class="btn btn-outline-info">Kaydet</button>
                    <a class="btn btn-outline-danger" href="/AdminMessage/ReceiverMessageList">İptal</a>
                </form>
            </div>
        </div>
    </div>
}


