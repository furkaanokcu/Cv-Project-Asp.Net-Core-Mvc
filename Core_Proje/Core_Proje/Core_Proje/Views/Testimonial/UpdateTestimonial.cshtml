@model EntityLayer.Concrete.Testimonial

@{
    ViewData["Title"] = "EditTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="card-header border-0">
    <h3 class="mb-0">Referans Detay Sayfası</h3>
</div>

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Yetenek Düzenleme Paneli </p>
                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label>ID</label>
                        @Html.TextBoxFor(x => x.TestimonialID, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Ad Soyad</label>
                        @Html.TextBoxFor(x => x.ClientName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Şirket</label>
                        @Html.TextBoxFor(x => x.Company, new { @class = "form-control" })
                    </div>
                   <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Resim Yolu</label>
                        @Html.TextBoxFor(x => x.ımageUrl, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Yorum</label>
                        @Html.TextAreaFor(x => x.Comment, 8, 3, new { @class = "form-control" })
                    </div>
                    <button class="btn btn-primary mr-2">Düzenle</button>
                    <a class="btn btn-dark" href="/Testimonial/Index">İptal</a>
                </form>
            </div>
        </div>
    </div>


